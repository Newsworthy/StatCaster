	<div class="container-fluid" id="body">
	    <div class="container" id="page-header">
	        <h1><span id="headline">Add a team</span></h1>
	        <hr>
	        <h3><span id="subheadline">Please enter the relevant information below</span></h3>
					<hr>
						<form method="post" action="/create" enctype="multipart/form-data">
							<h4><strong>Key Team Information</strong></h4>
							<div class="form-group row">
								<div class="col-md-10">
    						<label for="teamName" class="col-form-label">Team Name</label>
								<input id="teamName" name="teamName" placeholder="London Lemmings" type="text" required="required" class="form-control here">
    						</div>
								<div class="col-md-2">
    						<label for="teamNameShort" class="col-form-label">Team Short Name</label>
      						<input id="teamNameShort" name="teamNameShort" placeholder="LLM" type="text" aria-describedby="teamNameShortHelpBlock" required="required" maxlength="3" class="form-control here">
      						<span id="teamNameShortHelpBlock" class="form-text text-muted">Three Characters Only</span>
    						</div>
							</div>
							<div class="form-group row">
								<div class="col-md-2">
    						<label for="teamHomeCity" class="col-form-label">Team Home City</label>
      						<input id="teamHomeCity" name="teamHomeCity" placeholder="City" type="text" aria-describedby="teamHomeCityHelpBlock" class="form-control here">

    						</div>
								<div class="col-md-2">
    						<label for="teamFounded" class="col-form-label">Team Founding Year</label>
      						<input id="teamFounded" name="teamFounded" placeholder="2000" type="text" aria-describedby="teamFoundedHelpBlock" required="required" class="form-control here">
      						<span id="teamFoundedHelpBlock" class="form-text text-muted">Year in YYYY format</span>
    						</div>
								<div class="col-md-4">
									<label for="imageFile" class="col-form-label">Team Logo</label>
									<input type="file" class="btn btn-default btn-block" name="teamLogo" accept="image/png">
									<span id="teamLogoHelpBlock" class="form-text text-muted">Currently PNG files only</span>
								</div>
								<div class="col-md-2">
									<label for="homeColor" class="col-form-label">Home Jersey Colour</label>
									<input id="homeColor" type="color" name="homeColor" value="#000000" class="form-control here btn">
								</div>
								<div class="col-md-2">
									<label for="awayColor" class="col-form-label">Away Jersey Colour</label>
									<input id="awayColor" type="color" name="awayColor" value="#FFFFFF" class="form-control here btn">
								</div>
  						</div>
							<hr>
							<h4><strong>Team Personnel</strong></h4>
  						<div class="form-group row">
								<div class="col-md-3">
    						<label for="headCoach" class="col-form-label">Head Coach</label>
      						<input id="headCoach" name="headCoach" type="text" class="form-control here">
    						</div>
								<div class="col-md-3">
    						<label for="teamManager" class="col-form-label">Team Manager</label>
      						<input id="teamManager" name="teamManager" type="text" class="form-control here">
    						</div>
							</div>
							<div class="form-group row">
								<div class="col-md-4">
									<strong>Player Names</strong>
								</div>
								<div class="col-md-2">
									<strong>Player Numbers</strong>
								</div>
								<div class="col-md-3">
									<strong>Player Positions</strong>
								</div>
								<div class="col-md-3">
									<strong>Player Nationality</strong>
								</div>
						</div>
							<span class="player">
							</span>
  						<div class="form-group row">
    						<div class="col-md-6">
      						<button name="submit" type="submit" class="btn btn-primary">Submit</button>
    						</div>
  						</div>
						</form>
	    		<hr>
	    	</div>
			</div>
			{{> footer}}
		</body>
</html>
