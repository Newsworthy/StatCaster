	<title>Newsworthy Vision Ltd. - Add team</title>
</head>
<body>
	{{> header}}

	<script>
	$(document).ready(function() {
  for (i = 1; i < 21; i++) {
    text = "<div class='form-group row'><div class='col-md-4'><input id='player" + i + "Name' name='player" + i + "Name' placeholder='Firstname Lastname' type='text' class='form-control here'></div><div class='col-md-2'><select id='player" + i + "Number' name='player" + i + "Number'  class='form-control here jerseyNumber'></select></div><div class='col-md-3'><select id='player" + i + "Position' name='player" + i + "Position'  class='form-control here position'><option value='--'>--</option><option value='Goaltender'>Goaltender</option><option value='Forward'>Forward</option><option value='Defense'>Defense</option></select></div><div class='col-md-3'><select id='player" + i + "Nationality' name='player" + i + "Nationality' class='form-control here nationality'><span id='nationality'></select></div>";
    var playerSpan = $('.player');
    playerSpan.append($(text));
  }

	$(document).ready(function () {
			$('.nationality').load("/textfiles/countries.txt", function() {
				$('.nationality').append();
			});

		});

	// $(".nationality").load("/textfiles/countries.txt");


  $(".jerseyNumber").each(function() {
    var $select = $(this);
    for (n=0;n<=99;n++){
      $select.append($('<option></option>').val(n).text(n))
    }
  });
});
</script>
